# =============================================================================
# Pepino Discord Analytics Bot - Environment Configuration
# =============================================================================
# Copy this file to .env and configure the values for your environment
# Required values are marked with [REQUIRED]
# =============================================================================

# =============================================================================
# DISCORD BOT CONFIGURATION
# =============================================================================

# Discord bot token from Discord Developer Portal [REQUIRED]
# Get this from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord guild/server ID (optional, for guild-specific commands)
# Right-click your server -> Copy Server ID (requires Developer Mode)
DISCORD_GUILD_ID=

# Bot command prefix for legacy text commands (default: !)
DISCORD_BOT_COMMAND_PREFIX=!

# Discord intents (recommended to keep enabled)
DISCORD_BOT_MESSAGE_CONTENT_INTENT=true
DISCORD_BOT_MEMBERS_INTENT=true

# Discord bot performance settings
DISCORD_BOT_INTERACTION_TIMEOUT_SECONDS=25.0
DISCORD_BOT_CACHE_TTL_SECONDS=300
DISCORD_BOT_CACHE_MAX_ITEMS=50
DISCORD_BOT_MESSAGE_CHARACTER_LIMIT=2000
DISCORD_BOT_MESSAGE_CHUNK_SIZE=1900

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (SQLite by default)
DATABASE_URL=sqlite:///data/discord_messages.db

# SQLite database file path
DATABASE_SQLITE_PATH=data/discord_messages.db

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING_LEVEL=INFO

# Enable debug mode for verbose output
LOGGING_DEBUG_MODE=false

# Custom log directory (optional)
PEPINO_LOG_DIR=logs

# =============================================================================
# DATA SYNCHRONIZATION CONFIGURATION
# =============================================================================

# Sync performance settings
SYNC_BATCH_SIZE=100
SYNC_DELAY_SECONDS=1
SYNC_MAX_RETRIES=3
SYNC_TIMEOUT_SECONDS=300

# Sync behavior settings
SYNC_AUTO_THRESHOLD_HOURS=1
SYNC_ALLOW_FORCE=true
SYNC_SHOW_PROGRESS=true

# =============================================================================
# ANALYSIS CONFIGURATION
# =============================================================================

# Analysis limits and filters
ANALYSIS_MAX_MESSAGES_TOTAL=10000
ANALYSIS_MAX_MESSAGES_PER_RUN=800
ANALYSIS_MIN_MESSAGE_LENGTH=50
ANALYSIS_MAX_RESULTS=1000
ANALYSIS_CACHE_TTL_SECONDS=3600

# Analysis content filtering
# Base SQL filter for excluding bots and test channels from analysis
# Customize this to filter out specific users, bots, or channels
ANALYSIS_BASE_FILTER_SQL=author_id != 'sesh' AND author_id != '1362434210895364327' AND author_name != 'sesh' AND LOWER(author_name) != 'pepe' AND LOWER(author_name) != 'pepino' AND channel_name NOT LIKE '%test%' AND channel_name NOT LIKE '%playground%' AND channel_name NOT LIKE '%pg%'

# Topic analysis settings
ANALYSIS_TOPIC_MODEL_COMPONENTS=5

# =============================================================================
# NLP CONFIGURATION
# =============================================================================

# spaCy model for NLP processing
NLP_SPACY_MODEL=en_core_web_sm

# NLTK data packages (comma-separated)
NLP_NLTK_DATA_PACKAGES=punkt,stopwords

# NLP cache size
NLP_CACHE_SIZE=500

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Sentence transformer model for embeddings
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Embedding processing batch size
EMBEDDING_BATCH_SIZE=32

# Embedding cache size
EMBEDDING_CACHE_SIZE=1000

# =============================================================================
# VISUALIZATION CONFIGURATION
# =============================================================================

# Chart settings
VISUALIZATION_CHART_DPI=300
VISUALIZATION_CHART_FORMAT=png
VISUALIZATION_TEMP_DIRECTORY=temp

# Chart color scheme (JSON format)
# VISUALIZATION_CHART_COLORS={"primary": "#5865F2", "secondary": "#4752C4", "accent": "#FF6B6B", "success": "#4ECDC4", "warning": "#FFEAA7"}

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================

# Default export format for data exports
EXPORT_DEFAULT_FORMAT=json

# Maximum number of rows to export in a single operation
EXPORT_MAX_ROWS=10000

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Development environment example:
# LOGGING_LEVEL=DEBUG
# LOGGING_DEBUG_MODE=true
# VISUALIZATION_CHART_DPI=150
# ANALYSIS_MAX_MESSAGES_TOTAL=1000

# Production environment example:
# LOGGING_LEVEL=INFO
# LOGGING_DEBUG_MODE=false
# VISUALIZATION_CHART_DPI=300
# ANALYSIS_MAX_MESSAGES_TOTAL=50000
# ANALYSIS_CACHE_TTL_SECONDS=7200

# Performance-optimized example:
# SYNC_BATCH_SIZE=200
# EMBEDDING_BATCH_SIZE=64
# EMBEDDING_CACHE_SIZE=2000
# NLP_CACHE_SIZE=1000

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Only DISCORD_BOT_TOKEN is required - all other settings have sensible defaults
# 2. Boolean values: use 'true'/'false' (case insensitive)
# 3. JSON values should be properly escaped if using complex objects
# 4. File paths are relative to the project root directory
# 5. Cache sizes affect memory usage - adjust based on your system
# 6. Higher DPI values create better quality but larger chart files
# 7. The ANALYSIS_BASE_FILTER_SQL uses SQL WHERE clause syntax
# 8. Sync settings affect performance vs. Discord API rate limits
# 
# For more information, see: docs/operations.md
# ============================================================================= 