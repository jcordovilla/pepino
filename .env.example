###############################################################################
#  Example environment configuration:
#   1. Rename to .env
#   2. Populate values that do not have defaults or you want changed
#   3. Comment or delete lines that you want to leave default
###############################################################################

# =============================================================================
# REQUIRED SETTINGS (No defaults - must be set)
# =============================================================================

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# =============================================================================
# DISCORD BOT CONFIGURATION
# =============================================================================

# Bot command prefix (default: !)
COMMAND_PREFIX=!

# Enable message content intent (default: true)
MESSAGE_CONTENT_INTENT=true

# Enable members intent (default: true)
MEMBERS_INTENT=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (default: sqlite:///data/discord_messages.db)
DATABASE_URL=sqlite:///data/discord_messages.db

# SQLite database path (default: discord_messages.db)
DB_PATH=discord_messages.db

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Debug mode (default: false)
DEBUG=false

# =============================================================================
# ANALYSIS CONFIGURATION
# =============================================================================

# Maximum messages to analyze (default: 10000)
MAX_MESSAGES=10000

# Minimum message length for analysis (default: 50)
MIN_MESSAGE_LENGTH=50

# Max messages per analysis (default: 800)
MAX_MESSAGES_PER_ANALYSIS=800

# Topic model components (default: 5)
TOPIC_MODEL_N_COMPONENTS=5

# =============================================================================
# VISUALIZATION CONFIGURATION
# =============================================================================

# Chart DPI (default: 300)
CHART_DPI=300

# Chart format (default: png)
CHART_FORMAT=png

# Temporary directory for charts (default: temp)
TEMP_DIRECTORY=temp

# =============================================================================
# NLP CONFIGURATION
# =============================================================================

# spaCy model (default: en_core_web_sm)
SPACY_MODEL=en_core_web_sm

# NLTK data packages (default: punkt,stopwords)
NLTK_DATA=punkt,stopwords

# =============================================================================
# SYNC CONFIGURATION
# =============================================================================

# Sync batch size (default: 100)
SYNC_BATCH_SIZE=100

# Sync delay in seconds (default: 1)
SYNC_DELAY_SECONDS=1

# Sync max retries (default: 3)
SYNC_MAX_RETRIES=3

# =============================================================================
# ANALYSIS CACHE CONFIGURATION
# =============================================================================

# Analysis cache TTL in seconds (default: 3600)
ANALYSIS_CACHE_TTL=3600

# Analysis max results (default: 1000)
ANALYSIS_MAX_RESULTS=1000

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Embedding model (default: all-MiniLM-L6-v2)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Embedding batch size (default: 32)
EMBEDDING_BATCH_SIZE=32

# Embedding cache size (default: 1000)
EMBEDDING_CACHE_SIZE=1000

# =============================================================================
# NLP CACHE CONFIGURATION
# =============================================================================

# NLP cache size (default: 500)
NLP_CACHE_SIZE=500

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================

# Export default format (default: json)
EXPORT_DEFAULT_FORMAT=json

# Export max rows (default: 10000)
EXPORT_MAX_ROWS=10000

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Base filter for excluding bots and test channels (SQL WHERE clause)
# This is a complex SQL filter - modify carefully if needed
# BASE_FILTER="author_id != 'sesh' AND author_id != '1362434210895364327' AND author_name != 'sesh' AND LOWER(author_name) != 'pepe' AND LOWER(author_name) != 'pepino' AND channel_name NOT LIKE '%test%' AND channel_name NOT LIKE '%playground%' AND channel_name NOT LIKE '%pg%'"

# Chart colors (JSON format - modify if you want custom colors)
# CHART_COLORS={"primary": "#5865F2", "secondary": "#4752C4", "accent": "#FF6B6B", "success": "#4ECDC4", "warning": "#FFEAA7"}

# =============================================================================
# EXAMPLES FOR DIFFERENT DATABASES
# =============================================================================

# PostgreSQL example:
# DATABASE_URL=postgresql://username:password@localhost:5432/discord_messages

# MySQL example:
# DATABASE_URL=mysql://username:password@localhost:3306/discord_messages

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

